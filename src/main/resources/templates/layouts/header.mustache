<script>
    // 드롭다운 메뉴 자동 열림 기능 추가
    $(document).ready(function () {
        $('.dropdown').hover(
                function () {
                    $(this).addClass('show');
                    $(this).find('.dropdown-menu').addClass('show');
                },
                function () {
                    $(this).removeClass('show');
                    $(this).find('.dropdown-menu').removeClass('show');
                }
        );
    });
</script>