                <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=4752a62987e44f35d1fe417880dc4f4e&libraries=services"></script>
                <script>
                    var mapContainer = document.getElementById('map'), // 지도를 표시할 div
                            mapOption = {
                                center: new kakao.maps.LatLng(35.14432081, 129.0363092), // 지도의 중심좌표
                                level: 3 // 지도의 확대 레벨
                            };

                    var map = new kakao.maps.Map(mapContainer, mapOption);

                    var markerTitles = [{{#markerTitles}}"{{.}}"{{^last}},{{/last}}{{/markerTitles}}];
                    var markerAddresses = [{{#markerAddresses}}"{{.}}"{{^last}},{{/last}}{{/markerAddresses}}];


                    for (var i = 0; i < markerTitles.length; i++) {
                        addMarker(map, markerTitles[i], markerAddresses[i]);
                    }

                    function geocodeToLatLng(address, callback) {
                        var geocoder = new kakao.maps.services.Geocoder();
                        geocoder.addressSearch(address, function(result, status) {
                            if (status === kakao.maps.services.Status.OK) {
                                var latitude = result[0].y;
                                var longitude = result[0].x;
                                callback(latitude, longitude);
                            } else {
                                console.error('Failed to geocode address:', status);
                                callback(null, null);
                            }
                        });
                    }

                    // 마커를 표시하는 함수
                    function addMarker(map, title, address) {
                        geocodeToLatLng(address, function(latitude, longitude) {
                            if (latitude && longitude) {
                                var markerPosition = new kakao.maps.LatLng(latitude, longitude);
                                var marker = new kakao.maps.Marker({
                                    position: markerPosition,
                                    title: title
                                });
                                marker.setMap(map);
                                var infowindow = new kakao.maps.InfoWindow({
                                    content: title
                                });
                                infowindow.open(map, marker);
                            }
                        });
                    }
                </script>

